{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./",
    "lib": ["DOM", "ES2015", "ES2017.Object", "ES2018.Intl"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "declaration": true,
    "noEmit": true,
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "*/**/*.ts",
    "*/**/*.tsx"
  ]
}
